<div class="container py-5" style="max-width: 800px;">
  <div class="d-flex justify-content-center">
    <h7 class="mr-3">總金額 :</h7>
    <h1 class="mt-5" id="totalAmount">{{totalAmount}}</h1>
  </div>
  <div class="mx-auto d-flex mx-auto justify-content-end mb-5">
    <div class="dropdown" style="width:100%">
      <button class="btn btn-warning dropdown-toggle mt-5" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 100%;">
        <i class="fas fa-filter"></i>
        {{#unless filterCategory}}
          請選擇類別
        {{/unless}}
        {{categoryName}} 
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item d-flex justify-content-between" href="/?filterCategory=">全部類別</a>
        {{#each categories}}
        <a class="dropdown-item d-flex justify-content-between" href="/?filterCategory={{this._id}}"><i class="fas {{this.icon}}"></i>{{this.name}}</a>
        {{/each}}
      </div>
    </div>
  </div>

 
  <ul class="list-group">
    {{#unless records}}
    <li class="list-group-item d-flex justify-content-center">
      <a href="/record/new">
      Click to create your first expense record
      </a>
    </li> 
    {{/unless}}   
    {{#each records}}
    <li class="list-group-item row d-flex justify-content-between">
      <div class="col-lg-8 d-flex justify-content-between">
        <div class="d-flex justify-content-between" style="width: 150px;">
          <div class="category-icon" style="width: 40%">
            <i class="fas {{this.category.icon}}" style="width: 30px; height: 30px"></i>
          </div>
          <div class="text-center">
            <h5>{{this.name}}</h6>
            <h7>{{this.date}}</h6>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <h4>{{this.amount}}</h4>
        </div>
      </div>
      <div class="col-lg-4 button-group d-flex justify-content-end">
        <a href="/record/{{ this._id }}/edit" role="button" class="btn btn-outline-info mr-3 d-flex align-items-center">修改</a>
        <button type="submit" class="btn btn-outline-danger mr-3" data-toggle="modal" data-target="#delete{{this._id}}">刪除</button>
      </div>
    </li>
  <!-- Modal -->
    <div class="modal fade" id="delete{{ this._id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">Hint Message</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            您確定要刪除 {{ this.name }} 這個支出記錄嗎嗎？
          </div>
          <div class="modal-footer">
            <form action="./record/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button class="btn btn-dark m-1" type="submit" data-toggle="modal" data-target="#delete{{ this._id }}">是</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </ul>
  <div>

  <a href="./record/new">
    <button type="button" class="btn btn-primary btn-lg my-5 add-btn">
      <i class="fas fa-plus"></i>新紀錄
    </button>
  </a>
  </div>
</div>