<div class="container py-5" style="max-width: 800px;">
  <div class="d-flex justify-content-center">
    <h7 class="mr-3">總金額 :</h7>
    <h1 class="mt-5" id="totalAmount">{{totalAmount}}</h1>
  </div>
  <div class="mx-auto d-flex mx-auto justify-content-end mb-5">
    <div class="dropdown">
      <button
        class="btn btn-warning dropdown-toggle mt-5"
        type="button"
        id="dropdownMenuButton"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      ><i class="fas fa-filter"></i> 類別 </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        {{#each categories}}
        <a class="dropdown-item d-flex justify-content-between" href="/?searchKeyword={{searchKeyword}}&sortField=rating&sortOrder=desc"><i class="fas {{this.icon}}"></i>{{this.name}}</a>
        {{/each}}
      </div>
    </div>
  </div>

 
  <ul class="list-group">
    {{#unless record}}
    <li class="list-group-item d-flex justify-content-center">
      Click to create your first expense record
    </li> 
    {{/unless}}   
    {{#each record}}
    <li class="list-group-item row d-flex justify-content-between">
      <div class="col-lg-8 d-flex justify-content-between">
        <div>
          <div >
            <h5>{{this.name}}</h6>
            <h7>{{this.date}}</h6>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <h4>{{this.amount}}</h4>
        </div>
      </div>
      <div class="col-lg-4 button-group d-flex justify-content-end">
        <button type="button" class="btn btn-outline-info mr-3">修改</button>
        <button type="button" class="btn btn-outline-danger mr-3">刪除</button>
      </div>
    </li>
    {{/each}}
  </ul>
  <div>
  <a href="./record/new">
    <button type="button" class="btn btn-primary btn-lg my-5">
      <i class="fas fa-plus"></i>
      新紀錄</button>
  </a>
  </div>
</div>