<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <div class="d-flex justify-content-around py-3">
        <a href="/auth/facebook" class="btn btn-info btn-block"><i class="fab fa-facebook fa-2x"></i></a>
        <a href="/auth/google" class="btn btn-danger btn-block"><i class="fab fa-google fa-2x"></i></a>
      </div>
      <form action="/users/login" method="POST">
      <div class="form-row d-flex flex-column align-items-center">
        <div class="form-group col-md-8 py-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="form-group col-md-8 py-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <div class="form-group col-md-6">
          <button type="submit" class="btn btn-primary btn-block mt-5" style="width: 100%;">Login</button>
        </div>
      </div>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>