<form action="/record/{{ record._id }}?_method=PUT" class="newExpense" method="POST">
  <h1 class="title">Edit your expense</h1>

  <div class="container d-flex justify-content-center">
    <div class="contact-form row col-lg-10 d-flex justify-content-center">
      <div class="form-field col-lg-8">
        <input id="newName" name="name" type="text" class="input-text" value="{{ record.name }}" required>
        <label for="name" class="label mb-4">name</label>
      </div>
      <div class="form-field col-lg-8">
        <input id="newDate" name="date" type="date" class="input-text" value="{{ record.date }}" required>
        <label for="date" class="label mb-4">date</label>
      </div>
      <div class="form-field col-lg-8">
        <label class="label mb-4" for="category">category</label>
        <select class="input-text" id="category" name="category"  required>
            <option selected>請選擇類別</option>
            <option value="home" {{#eq record.category "家居物業"}} selected{{/eq}}>家居物業</option>
            <option value="shuttle-van" {{#eq record.category "交通出行"}} selected{{/eq}}>交通出行</option>
            <option value="grin-beam" {{#eq record.category "休閒娛樂"}} selected{{/eq}}>休閒娛樂</option>
            <option value="utensils" {{#eq record.category "餐飲食品"}} selected{{/eq}}>餐飲食品</option>
            <option value="pen" {{#eq record.category "其他"}} selected{{/eq}}>其他</option>
        </select>
      </div>
      <div class="form-field col-lg-8">
        <input id="newName" name="merchant" type="text" class="input-text" value="{{ record.merchant }}" required>
        <label for="merchant" class="label mb-4">merchant</label>
      </div>      
      <div class="form-field col-lg-8">
        <input id="newAmount" name="amount" type="number" min="0" class="input-text" value="{{ record.amount }}" required>
        <label for="amount" class="label mb-4">amount</label>
      </div>
      <div class="form-field col-lg-6 d-flex justify-content-center">
        <button class="submit-btn" type="submit">送出</button>
        <a href=""></a>
      </div>
    </div>
  </div>
</form>